<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:browser="http://namespaces.zope.org/browser"
   xmlns:zojax="http://namespaces.zope.org/zojax"
   i18n_domain="zojax.usermanual">

  <include package="zojax.autoinclude" file="meta.zcml" />
  <includeAllDependencies package="zojax.usermanual" extras="test" />

  <includeOverrides package="zojax.usermanual.tests" file="overrides.zcml" />

  <interface
     name="DefaultSkin"
     interface="zojax.usermanual.tests.tests.IDefaultSkin"
     type="zope.publisher.interfaces.browser.IBrowserSkinType" />

  <browser:defaultSkin name="DefaultSkin" />

  <securityPolicy
     component="zojax.security.securitypolicy.SecurityPolicy" />

  <role id="zope.Anonymous" title="Everytext"
        description="All users have this role implicitly" />
  <role id="zope.Manager" title="Site Manager" />

  <!-- Replace the following directive if you don't want public access -->
  <grant permission="zope.View"
         role="zope.Anonymous" />

  <grant permission="zope.app.dublincore.view"
         role="zope.Anonymous" />

  <!-- Principals -->
  <unauthenticatedPrincipal
      id="zope.anytext"
      title="Unauthenticated User" />

  <!-- Principal that tests generally run as -->
  <principal
      id="zope.mgr"
      title="Manager"
      login="mgr"
      password="mgrpw" />

  <principal
      id="zope.user"
      title="User"
      login="user"
      password="userpw" />

  <grant role="zope.Manager" principal="zope.mgr" />
  <grant permission="zojax.PersonalSpace" principal="zope.user" />

  <grantAll role="zope.Manager" />

</configure>
