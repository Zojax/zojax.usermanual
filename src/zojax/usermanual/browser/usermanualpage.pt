<div i18n:domain="zojax.usermanual">

  <div class="body" tal:content="structure context/body/cooked" />

  <ul tal:condition="python:context.next is not None or context.previous is not None or context.parent is not None">
    <li class="next" tal:define="context context/next" tal:condition="python:context is not None">
      <a tal:attributes="href string:${context/@@absolute_url}/">
        Next:
        <tal:block tal:content="string:${context/fullNumber} ${context/title}" />
      </a>
    </li>
    <li class="previous" tal:define="context context/previous" tal:condition="python:context is not None">
      <a tal:attributes="href string:${context/@@absolute_url}/">
        Previous:
        <tal:block tal:content="string:${context/fullNumber} ${context/title}" />
      </a>
    </li>
    <li class="parent" tal:define="context context/parent" tal:condition="python:context is not None">
      <a tal:attributes="href string:${context/@@absolute_url}/">
        Parent:
        <tal:block tal:condition="not:context/fullNumber|nothing" tal:content="string:${context/title}" />
        <tal:block tal:condition="context/fullNumber|nothing" tal:content="string:${context/fullNumber} ${context/title}" />
      </a>
    </li>
  </ul>
</div>
